{% extends "base.html.twig" %}

{% block title %}Liste Quotes{% endblock %}

{% block body %}
<h1> Quotes </h1>
<form name="f" method="get">
    <input name="search" id="search" type="text">
    <input type="submit" value="search">
</form>

<ul>
    {% for q in quotes %}
    <li>{{ q.quote }} <p class="meta">---{{q.meta}}</p>
    </li>
    {% endfor %}
</ul>
{% endblock %}

{% block stylesheets %}
<style>
    .meta {
        font-style: italic;
    }
</style>
{% endblock %}